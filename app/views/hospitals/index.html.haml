.page-header.m-4
  %p{style: "color: green"}= notice
  %h1.mb-4
    = t('application.list_of', model: t('activerecords.modules.hospital.other'))
    .float-right
      = link_to t('application.new_of', model: t('activerecords.modules.hospital.one')),
      new_hospital_path, class: "btn btn-primary"

%table.table.table-striped
  %thead
    %tr
      %th= t('attributes.hospital.name')
      %th 
      %th
      %th

  %tbody
    - @hospitals.each do |hospital|
      %tr
        %td= hospital.name
        %td= link_to t('application.show'), hospital, class: "btn btn-info"
        %td= link_to t('application.edit'), edit_hospital_path(hospital), class: "btn btn-success"
        %td= link_to t('application.delete'), hospital, method: :delete, class: "btn btn-danger",
                                data:{
                                confirm: t('application.delete_confirmation', model: t('activerecords.modules.hospital.one')),
                                accept: t('application.accept'),
                                reject: t('application.cancel')}



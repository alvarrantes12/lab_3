.page-header
  %p{style: "color: green"}= notice
  %h1.mb-4
    = t('application.list_of', model: t('activerecord.modules.hospital.list'))
    .float-right
      = link_to t('application.new', model: t('activerecord.modules.hospital.one')), new_hospital_path, class: "btn btn-primary"

%table.table.table-striped
  %thead
    %tr
      %th
        = t('application.name_of', model: t('activerecord.modules.hospital.other'))
      %th
      %th
      %th

  
  %tbody
    - @hospitals.each do |hospital|
      %tr
        %td= hospital.name
        %td= link_to t('application.show', model: t('activerecord.modules.hospital.one')), hospital, class: "btn btn-info"
        %td= link_to t('application.edit', model: t('activerecord.modules.hospital.one')), edit_hospital_path(hospital), class: "btn btn-success"
        %td= link_to link_to t('application.delete', model: t('activerecord.modules.hospital.one')), hospital, method: :delete, class: "btn btn-danger",
                                data: {confirm: t('activerecord.modules.hospital.delete'), 
                                accept: "OK", 
                                reject: t('activerecord.modules.hospital.cancel')}

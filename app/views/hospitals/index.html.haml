.page-header
  %p{:style => "color: green"}= notice

  %h1.mb-4
    = "Listado de hospitales"
    .float-right
      = link_to "Nuevo Hospital", new_hospital_path, class: "btn btn-primary"


%table.table.table-striped
  %thead
    %tr
      %th="Nombre"
      %th
      %th
      %th

  %tbody
    - @hospitals.each do |hospital|
      %tr
        %td= hospital.name
        %td= link_to "Ver", hospital, class: "btn btn-info"
        %td= link_to "Editar", edit_hospital_path(hospital), class: "btn btn-success"
        %td= link_to "Eliminar", hospital, method: :delete, class: "btn btn-danger", 
                        data: {confirm: "Desea eliminarlo",
                        accept: "OK",
                        reject: "Cancelar"}





%h1 Hospitals
#hospitals
  - @hospitals.each do |hospital|
    = render hospital
    %p
      = link_to "Show this hospital", hospital
= link_to "New hospital", new_hospital_path

.div.m-4
  .page.header
    %p{:style => "color: green"}= notice
    %h1.mb-4
      =  t('application.list_of', model: t('activerecord.modules.appointments.other'))
      .float-right
        = link_to  t('application.new', model: t('activerecord.modules.appointments.one')), new_appointment_path, class: "btn btn-primary"
      .float-right.mr-2
        = link_to t('application.back'), "/", class: 'btn btn-primary'
  %table.table.table-striped
    %thread
      %tr
        %th= t("activerecord.attributes.appointment.date")
        %th= t("activerecord.modules.doctors.first_upper_one")
        %th= t("activerecord.modules.patients.first_upper_one")
        %th
        %th
        %th
    %tbody
      - @appointments.each do |appointment|
        %tr
          %td= appointment.date
          %td= "#{appointment.doctor.first_name} #{appointment.doctor.last_name} - #{appointment.doctor.code}"
          %td= "#{appointment.patient.first_name} #{appointment.patient.last_name} - #{appointment.patient.id_number}"
          %td= link_to t('application.show'), appointment, class: "btn btn-info"
          %td= link_to t('application.edit'), edit_appointment_path(appointment), class: "btn btn-success"
          %td= link_to t('application.delete'), appointment, method: :delete, class: "btn btn-danger", data: {confirm: t('application.want_to_delete', model: t('activerecord.modules.appointment.one')), accept: t('application.accept'), reject: t('application.reject')}
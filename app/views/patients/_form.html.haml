= form_with(model: patient) do |form|
  - if patient.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(patient.errors.count, "error")
        prohibited this patient from being saved:
      %ul
        - patient.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :first_name, style: "display: block"
    = form.text_field :first_name
  %div
    = form.label :string, style: "display: block"
    = form.text_field :string
  %div
    = form.label :last_name, style: "display: block"
    = form.text_field :last_name
  %div
    = form.label :identification_number, style: "display: block"
    = form.text_field :identification_number
  %div
    = form.label :integer, style: "display: block"
    = form.text_field :integer
  %div
    = form.submit
